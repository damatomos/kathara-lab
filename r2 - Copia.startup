ifconfig eth0 10.0.0.1/24
ifconfig eth1 192.168.0.1/24
ifconfig eth2 10.10.10.5/24

route add default gw 10.10.10.1

route add -net 10.0.0.0/24 gw 10.0.0.1
route add -net 192.168.0.0/24 gw 192.168.0.1
route add -net 10.10.10.0/24 gw 10.10.10.5


iptables -A INPUT -p tcp --dport 22 -j ACCEPT
iptables -A INPUT -j REJECT

iptables -A FORWARD -j REJECT

iptables -I FORWARD 1 -p tcp --dport 22 -j ACCEPT

iptables -A FORWARD -p udp -s 10.0.0.253 -d 192.168.0.0/255.255.255.100 --dport 53 -j ACCEPT

iptables -A FORWARD -p udp -s 192.168.0.0/255.255.255.100 -d 10.0.0.253 --dport 53 -j ACCEPT

iptables -A FORWARD -p tcp -s 10.0.0.0/24 -d 192.168.0.0/255.255.255.100 -j ACCEPT

iptables -A FORWARD -p tcp -s 192.168.0.0/255.255.255.100 -d 10.0.0.0/24 -j ACCEPT


